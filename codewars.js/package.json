{
  "name": "codewars",
  "version": "1.0.0",
  "description": "Codewars solutions in javascript",
  "main": "index.js",
  "scripts": {
    "build": "esbuild src/index.js --bundle --minify --outdir=dist",
    "build:debug": "esbuild index.js --bundle --sourcemap --outdir=dist",
    "test": "jest --watch"
  },
  "author": "Me",
  "license": "ISC",
  "devDependencies": {
    "esbuild": "^0.15.5",
    "esbuild-jest": "^0.5.0",
    "jest": "^28.1.3"
  },
  "jest": {
    "transform": {
      "^.+\\.js?$": "esbuild-jest"
    },
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageProvider": "v8"
  }
}
